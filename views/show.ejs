<% include partials/header.ejs %>

<div class="ui container main center text">
 <h1> 
       <%= post.title %>
 </h1> 
    <img src=" <%= post.image %> " class="thumbnails">
    <p> <%= post.body %> </p>
    <a href="/blogs" class="ui secondary basic button">Powrót do listy postów</a>
    <a href="/blogs/<%=post._id%>/edit" class="ui positive basic button">Edytuj post</a>
    <form class="deleteButton" action="/blogs/<%= post._id %>/delete?_method=DELETE" method="POST"> 
        <input type="submit" name="destroy" class="ui negative basic button" value="Usuń post">
    </form>
</div>

